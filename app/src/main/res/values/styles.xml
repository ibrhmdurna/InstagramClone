<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/noAnimTheme</item>
    </style>

    <style name="CustomHomeActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="CustomBlackActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="CustomLightActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="CustomWhiteNavigationActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="CustomBottomNavigationView" parent="AppTheme">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="DialogStyle" parent="AppTheme">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/expand_in</item>
        <item name="android:windowExitAnimation">@anim/expand_out</item>
    </style>

    <style name="noAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
    </style>

</resources>
