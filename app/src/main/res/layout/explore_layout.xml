<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/explore_big_container">

    <LinearLayout
        android:id="@+id/explore_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/default_post_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp">

                <com.example.ibrhm.instagramclone.Utils.GridImageView
                    android:id="@+id/explorePost0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorGray"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/explorePost0_camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fram_camera"
                    android:layout_alignParentEnd="true"
                    android:padding="2dp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp">

                <com.example.ibrhm.instagramclone.Utils.GridImageView
                    android:id="@+id/explorePost1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorGray"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/explorePost1_camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fram_camera"
                    android:layout_alignParentEnd="true"
                    android:padding="2dp"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <com.example.ibrhm.instagramclone.Utils.GridImageView
                android:id="@+id/explorePost2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorGray"
                android:scaleType="centerCrop"/>

            <com.example.ibrhm.instagramclone.VideoRecyclerView.view.VideoView
                android:id="@+id/explore_video_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:visibility="gone">
            </com.example.ibrhm.instagramclone.VideoRecyclerView.view.VideoView>

            <com.example.ibrhm.instagramclone.VideoRecyclerView.view.CameraAnimation
                android:id="@+id/cameraAnimation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/fram_camera"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/big_content_video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_video_camera_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/watch"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/videos_you_might_like"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/big_content_photo_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_picture_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/look"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/photos_you_might_like"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/left_post_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp">

                <com.example.ibrhm.instagramclone.Utils.GridImageView
                    android:id="@+id/explorePost0_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorGray"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/explorePost0_left_camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fram_camera"
                    android:layout_alignParentEnd="true"
                    android:padding="2dp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp">

                <com.example.ibrhm.instagramclone.Utils.GridImageView
                    android:id="@+id/explorePost1_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorGray"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/explorePost1_left_camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fram_camera"
                    android:layout_alignParentEnd="true"
                    android:padding="2dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/explore_center_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <com.example.ibrhm.instagramclone.Utils.GridImageView
                android:id="@+id/explorePost3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/colorGray"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/explorePost3_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fram_camera"
                android:layout_alignParentEnd="true"
                android:padding="2dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <com.example.ibrhm.instagramclone.Utils.GridImageView
                android:id="@+id/explorePost4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/colorGray"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/explorePost4_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fram_camera"
                android:layout_alignParentEnd="true"
                android:padding="2dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <com.example.ibrhm.instagramclone.Utils.GridImageView
                android:id="@+id/explorePost5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/colorGray"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/explorePost5_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fram_camera"
                android:layout_alignParentEnd="true"
                android:padding="2dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/explore_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <com.example.ibrhm.instagramclone.Utils.GridImageView
                android:id="@+id/explorePost6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/colorGray"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/explorePost6_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fram_camera"
                android:layout_alignParentEnd="true"
                android:padding="2dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <com.example.ibrhm.instagramclone.Utils.GridImageView
                android:id="@+id/explorePost7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/colorGray"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/explorePost7_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fram_camera"
                android:layout_alignParentEnd="true"
                android:padding="2dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <com.example.ibrhm.instagramclone.Utils.GridImageView
                android:id="@+id/explorePost8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/colorGray"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/explorePost8_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fram_camera"
                android:layout_alignParentEnd="true"
                android:padding="2dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>